<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:weightSum="10"
    android:background="@drawable/civil">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_weight="3.5"
        android:textAlignment="center">

        <TextView
            android:id="@+id/genEventName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Counter Strike"
            android:textColor="@color/cardview_light_background"
            android:textSize="30dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/EventDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Oct 5,2017"
            android:textColor="@color/cardview_light_background"
            android:layout_below="@+id/genEventName"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        android:layout_weight="2.7">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/dateLocHolder"
                android:orientation="horizontal"
                android:weightSum="10">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center_horizontal"
                    android:layout_margin="20dp">

                    <ImageView
                        android:id="@+id/locationIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/bell"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/genEventLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Classroom Complex"
                        android:textColor="@color/cardview_light_background"
                        android:layout_below="@+id/locationIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="1dp"/>

                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="5"
                    android:gravity="center_horizontal"
                    android:layout_margin="20dp">

                    <ImageView
                        android:id="@+id/calednerIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/bell"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:id="@+id/dateTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oct 3, 2017 1 PM onwards"
                        android:textColor="@color/cardview_light_background"
                        android:layout_below="@+id/calednerIcon"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="1dp"/>


                </RelativeLayout>


            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/dateLocHolder"
                android:id="@+id/contactHolder"
                android:layout_margin="17dp">

                <TextView
                    android:id="@+id/cnctLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact"
                    android:textColor="@color/cardview_light_background"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:paddingBottom="22dp"/>
                <TextView
                    android:id="@+id/genEventContactPerson"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="Ashwin Kulkarni 8987654312"
                    android:layout_below="@+id/cnctLabel"
                    android:textColor="@color/cardview_light_background"
                    android:paddingBottom="13sp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_below="@+id/contactHolder"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/cartPriceHolder"
                android:orientation="horizontal"
                android:weightSum="10"
                >

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:layout_weight="5"
                    android:layout_margin="10dp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ticket Price"
                            android:textStyle="bold"
                            android:paddingBottom="18dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:id="@+id/priceLabel"
                            android:textColor="@color/cardview_light_background"/>

                        <TextView
                            android:id="@+id/genEventPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rs.50"
                            android:textSize="18dp"
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/priceLabel"
                            android:textColor="@color/cardview_light_background"/>

                    </RelativeLayout>



                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="bottom"
                    android:layout_weight="5">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:id="@+id/addToCart"
                        android:text="ADD TO CART"
                        />

                </RelativeLayout>

            </LinearLayout>



        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Description"
            android:textColor="@color/cardview_light_background"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:id="@+id/eventDescriptionLabel" />
        <TextView
            android:id="@+id/genEventInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eventDescriptionLabel"
            android:text="@string/large_text"
            android:layout_centerHorizontal="true"
            android:textColor="@color/cardview_light_background"
            android:layout_marginTop="16dp"
            android:layout_marginRight="31dp"/>


    </RelativeLayout>

</LinearLayout>