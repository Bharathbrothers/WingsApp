<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="60dp"
    android:layout_marginBottom="60dp"
    android:background="@drawable/card_bg_5_rounded"
    android:paddingBottom="2dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    android:paddingTop="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/text_margin">

        <!-- Sub Linear layout for Heading and Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/CivilEventName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="2dp"
                android:paddingRight="85dp"
                android:text="Jay Hind"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="#8ECCF6"
                android:textSize="18sp"
                android:textStyle="bold" />


        </LinearLayout>
        <!-- Sub Linear Layout ends here -->


        <TextView

            android:id="@+id/CivilEventExcerpt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:textAppearance="@style/Base.TextAppearance.AppCompat"
            android:textColor="#8ECCF6"
            android:textSize="14sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingTop="5dp">


            <ImageView
                android:id="@+id/locationIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="6dp"
                app:srcCompat="@drawable/location" />

            <TextView
                android:id="@+id/CivilEventLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classroom Complex"
                android:textColor="#8ECCF6"
                android:textSize="13sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/eventPrice"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/eventContactPerson"
                android:layout_width="0dp"
                android:layout_height="0dp" />

            <TextView
                android:id="@+id/eventContactNum"
                android:layout_width="0dp"
                android:layout_height="0dp" />


        </LinearLayout>


    </LinearLayout>


</RelativeLayout>