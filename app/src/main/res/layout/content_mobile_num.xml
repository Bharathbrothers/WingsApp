<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:fitsSystemWindows="true">

    <ImageView
        android:layout_width="253sp"
        android:layout_height="152sp"
        android:src="@drawable/wings_logo"
        android:layout_below="@+id/mStatusTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-5sp"
        android:id="@+id/imageView4" />





    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mStatusTextView"/>

    <EditText
        android:id="@+id/mobNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="199dp"
        android:ems="10"
        android:inputType="number" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mobNum"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Button" />


</RelativeLayout>